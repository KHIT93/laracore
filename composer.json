{
	"name": "laracore/laracore",
	"description": "Laracore CMS is an opensource content management system built for the future using the Laravel Framework",
	"keywords": ["laracore", "cms"],
	"license": "MIT",
	"type": "project",
  	"version": "1.0.0",
	"require": {
	  	"php": ">=5.5.9",
		"laravel/framework": "5.1.*",
        "laravelcollective/html": "~5.0",
		"laracasts/flash": "~1.3",
        "laracasts/presenter": "dev-master",
		"barryvdh/laravel-elfinder": "0.3.*",
        "khill/fontawesomephp" : "1.0.x",
		"overtrue/laravel-lang": "dev-master",
        "zizaco/entrust": "dev-laravel-5",
        "orangehill/iseed": "dev-master",
		"caffeinated/modules": "~2.0",
		"msurguy/honeypot": "dev-master"
	},
	"require-dev": {
	  "fzaninotto/faker": "~1.4",
	  "mockery/mockery": "0.9.*",
	  "phpunit/phpunit": "~4.0",
	  "phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/",
		  	"Modules\\": "modules/"
		},
                "files": [
                    "app/Support/helpers.php",
                    "app/Libraries/Theme.php",
                    "app/Libraries/Page.php",
                    "app/Libraries/RequirementsChecker.php",
                    "app/Libraries/StoragePermissionChecker.php"
                ]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
		  "php artisan clear-compiled",
		  "php artisan optimize"
		],
		"pre-update-cmd": [
		  "php artisan clear-compiled"
		],
		"post-update-cmd": [
		  "php artisan optimize"
		],
		"post-root-package-install": [
		  "php -r \"copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
		  "php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
